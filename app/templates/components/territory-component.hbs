<foreignObject class="container">
  {{#each territory.units as |unit|}}
    {{unit-component unit=unit}}
  {{/each}}

  {{#each territory.orderTokens as |orderToken|}}
    {{order-token-component orderToken=orderToken}}
  {{/each}}

  {{#each territory.powerTokens as |powerToken|}}
    {{power-token-component powerToken=powerToken}}
  {{/each}}

  {{#if territory.garrison}}
    {{draggable-component
    object=territory.garrison
    class=(concat 'piece garrison-' territory.garrison.name)}}
  {{/if}}
</foreignObject>

<path class="territory" d="{{territory.path}}"
{{action "allowDrop" on="dragOver"}}
/>
